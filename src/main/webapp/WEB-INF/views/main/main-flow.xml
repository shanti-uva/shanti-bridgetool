<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<action-state id="setup">
		<evaluate expression="bridgeServiceAction.setup(flowRequestContext)" />
		<transition on="success" to="checkConfig" />
		<transition on="error" to="error" />
	</action-state>

	<view-state id="debug" view="main/debug-entry" model="config">
		<transition to="checkConfig" />
		<!-- regardless of the result, lets checkConfig -->
	</view-state>

	<action-state id="checkConfig">
		<evaluate
			expression="bridgeServiceAction.checkConfig(flowRequestContext)" />
		<transition on="unconfigured" to="configure" />
		<transition on="configured" to="normal" />
		<transition on="error" to="error" />
	</action-state>

	<subflow-state id="configure" subflow="configure">
		<!-- always check the config after returning from configure -->
		<transition to="checkConfig" />
	</subflow-state>

	<!-- the normal configured state -->
	<action-state id="normal">
		<evaluate expression="bridgeServiceAction.prepareNormalView(flowRequestContext)" />
		<transition on="success" to="normalView" />
		<transition on="error" to="normalView" />
	</action-state>
	
	<view-state id="normalView" view="main/normal">
		<transition to="configure" on="edit" />
		<!--   exception-handler bean="remoteConfluenceExceptionHandler" / -->
	</view-state>
</flow>
