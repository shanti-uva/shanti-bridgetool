<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<action-state id="setup">
		<evaluate expression="bridgeServiceAction.setup(flowRequestContext)" />
		<transition on="success" to="checkConfig" />
	</action-state>

	<view-state id="debug" view="main/debug-entry" model="config">
		<transition to="checkConfig" />
		<!-- regardless of the result, lets checkConfig -->
	</view-state>

	<action-state id="checkConfig">
		<evaluate expression="bridgeServiceAction.checkConfig(flowRequestContext)" />
		<transition on="unconfigured" to="update" />
		<transition on="configured" to="prepare" />
	</action-state>

	<subflow-state subflow="choose" id="choose">
		<!-- always check the config after returning from choose -->
		<transition to="update" />
	</subflow-state>

	<!-- the normal configured state -->
	<action-state id="prepare">
		<evaluate expression="bridgeServiceAction.prepareNormalView(flowRequestContext)" />
		<transition on="success" to="normal" />
		<transition on="error" to="showConfig" />
	</action-state>

	<view-state id="normal" view="main/normal">
		<transition on="configure" to="showConfig"></transition>
	</view-state>

	<action-state id="update">
		<evaluate expression="bridgeServiceAction.prepareForm(flowRequestContext)" />
		<transition on="success" to="showConfig" />
	</action-state>

	<view-state id="showConfig" model="bridge" view="main/config">
		<transition on="choose" to="choose" />
		<transition on="clear" to="clear" />
		
		<transition to="configure" on="configure" />
		<transition to="prepare" on="done" validate="false"></transition>
		<transition to="create" on="create"></transition>
	</view-state>

	<action-state id="clear">
		<evaluate expression="bridgeServiceAction.delete(flowRequestContext)" />
		<transition to="checkConfig" />
	</action-state>

	<subflow-state id="configure" subflow="configure">
		<transition to="update" />
	</subflow-state>
	<subflow-state id="create" subflow="create">
		<transition to="update"></transition>
	</subflow-state>
</flow>
